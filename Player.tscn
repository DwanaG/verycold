script/source = "extends RigidBody

export(float, 0, 100) var max_move_speed = 1
export(float, 0, 100) var accel_speed = 1
export(float, 0, 2) var mouse_sensitivity_x = 1
export(float, 0, 2) var mouse_sensitivity_y = 1
export(float, 0, 100) var gun_speed = 1

export(PackedScene) var gun_projectile

var desiredMoveVector = Vector2()
var yaw : Spatial
var pitch : Spatial
var look : RayCast
var targetGun : RayCast
var shotGun
var camera : Camera

var lvl1Text: Label
var lvl2Text: Label

var hasGun : bool = true

func _ready():
	camera = get_node(\"Yaw/Pitch/Camera\")
	yaw = get_node(\"Yaw\")
	pitch = get_node(\"Yaw/Pitch\")
	look = get_node(\"Yaw/Pitch/Camera/Look\")
	targetGun = get_node(\"Yaw/Pitch/Camera/Target Gun\")
	var handsAnimator = get_node(\"Yaw/Pitch/Hands/AnimationPlayer\").play(\"default\")
	Input.set_mouse_mode(Input.MOUSE_MODE_CAPTURED)
	lvl1Text = get_node(\"/root/Level/Lvl1TextArea/Lvl1TextLabel\")
	lvl2Text = get_node(\"/root/Level/Lvl2TextArea/Lvl2TextLabel\")
	
func _input(event):
	var mouseMode = Input.get_mouse_mode()
	if (event.is_action_pressed(\"escape\")):
		if (mouseMode == Input.MOUSE_MODE_CAPTURED):
			Input.set_mouse_mode(Input.MOUSE_MODE_VISIBLE)
		else:
			get_tree().quit()
		get_tree().set_input_as_handled()
		
	
func _unhandled_input(event):
	var mouseMode = Input.get_mouse_mode()
	if (event.is_action_pressed(\"fire\")):
		if (mouseMode != Input.MOUSE_MODE_CAPTURED):
			Input.set_mouse_mode(Input.MOUSE_MODE_CAPTURED)
			return
		fire_or_return(false)
	if (event.is_action_pressed(\"fire_alt\")):
		fire_or_return(true)
		pass
	if (event.is_action_pressed(\"jump\")):
		pass
		
	if (event is InputEventMouseMotion and mouseMode == Input.MOUSE_MODE_CAPTURED):
		yaw.set_transform( yaw.get_transform() \\
			.rotated(Vector3.UP, deg2rad(-event.relative.x) * mouse_sensitivity_x))
			
		pitch.set_transform( pitch.get_transform() \\
			.rotated(pitch.get_transform().basis.x, deg2rad(event.relative.y) * mouse_sensitivity_y))

func fire_or_return(alt):
	if (!hasGun):
		returnGun(alt)
		return
	
	var projectile : RigidBody = gun_projectile.instance()
	var pos = get_node(\"Yaw/Pitch/Gun Spawn Position\").global_transform;
	projectile.set_transform(pos)
	get_tree().root.add_child( projectile )
	var direction = (look.get_collision_point() - pos.origin).normalized()
	print(look.get_collision_point())
	projectile.apply_central_impulse(direction * gun_speed)
	projectile.player = self
	
	hasGun = false
	get_node(\"Yaw/Pitch/Gun\").visible = false
	shotGun = projectile
	
func returnGun(alt):
	if (targetGun.is_colliding()):
		shotGun.recall(alt);
	
func _process(delta):
	var moveVector = Vector2(
		Input.get_action_strength(\"strafe_left\") - Input.get_action_strength(\"strafe_right\"),
		Input.get_action_strength(\"move_forward\") - Input.get_action_strength(\"move_backward\")
		)
	
	desiredMoveVector = moveVector.normalized()
	
func _physics_process(delta):
	if (shotGun == null):
		return
		
	if (targetGun.is_colliding()):
		shotGun.glow()
	else:
		shotGun.unglow()

func _integrate_forces(state):
	var localAccelVector = Vector3(desiredMoveVector.x, 0, desiredMoveVector.y) * accel_speed
	var globalAccelVector = yaw.get_global_transform().basis.xform(localAccelVector);
	state.add_force(globalAccelVector, Vector3())
	
	var flat_motion = Vector2(linear_velocity.x, linear_velocity.z)
	if (flat_motion.length_squared() > max_move_speed * max_move_speed):
		flat_motion = flat_motion.normalized() * max_move_speed
		set_linear_velocity(Vector3(flat_motion.x, linear_velocity.y, flat_motion.y))

func pickupGun():
	shotGun = null
	hasGun = true
	get_node(\"Yaw/Pitch/Gun\").visible = true
	

func _on_Lvl1TextArea_body_entered(body):
	var t = Timer.new()
	t.set_wait_time(0.5)
	t.set_one_shot(true)
	self.add_child(t)
	lvl1Text.text = (\"A\")
	t.start()
	yield(t, \"timeout\")
	lvl1Text.text = (\"LITTLE\")
	t.start()
	yield(t, \"timeout\")
	lvl1Text.text = (\"LESS\")
	t.start()
	yield(t, \"timeout\")
	lvl1Text.text = (\"CONVER\")
	t.start()
	yield(t, \"timeout\")
	lvl1Text.text = (\"SATION\")
	t.start()
	yield(t, \"timeout\")
	t.queue_free()
	lvl1Text.text = (\"\")
	lvl1Text.percent_visible = 0;
	
func _on_Lvl2TextArea_body_entered(body):
	var t = Timer.new()
	t.set_wait_time(0.5)
	t.set_one_shot(true)
	self.add_child(t)
	lvl2Text.text = (\"A\")
	t.start()
	yield(t, \"timeout\")
	lvl2Text.text = (\"LITTLE\")
	t.start()
	yield(t, \"timeout\")
	lvl2Text.text = (\"MORE\")
	t.start()
	yield(t, \"timeout\")
	lvl2Text.text = (\"ACTION\")
	t.start()
	yield(t, \"timeout\")
	t.queue_free()
	lvl2Text.text = (\"\")
	lvl2Text.percent_visible = 0;
	
	
"

